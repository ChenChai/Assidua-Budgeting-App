<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:dialogTitle="@string/set_budget_name"
        app:key="budget_name"
        app:title="@string/budget_name"
        app:useSimpleSummaryProvider="true" />
    <Preference
        android:icon="@drawable/ic_arrow_left"
        app:title="@string/move_left" />
    <Preference
        android:icon="@drawable/ic_arrow_right"
        app:title="@string/move_right" />
    <Preference
        app:title="@string/delete_budget"
        app:summary="@string/action_cannot_be_undone" />

</PreferenceScreen>